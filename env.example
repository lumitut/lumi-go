# Lumi-Go Service Configuration
# Copy this file to .env and update values as needed

# ============================================
# Service Configuration
# ============================================
LUMI_SERVICE_NAME=lumi-go
LUMI_SERVICE_VERSION=1.0.0
LUMI_SERVICE_ENVIRONMENT=development
LUMI_SERVICE_LOGLEVEL=info

# ============================================
# Server Configuration
# ============================================
LUMI_SERVER_HTTPPORT=8080
LUMI_SERVER_RPCPORT=8081
LUMI_SERVER_HTTPREADTIMEOUT=15s
LUMI_SERVER_HTTPWRITETIMEOUT=15s
LUMI_SERVER_HTTPIDLETIMEOUT=60s
LUMI_SERVER_RPCREADTIMEOUT=30s
LUMI_SERVER_RPCWRITETIMEOUT=30s
LUMI_SERVER_GRACEFULSHUTDOWNTIMEOUT=30s
LUMI_SERVER_ENABLEPPROF=false
LUMI_SERVER_PPROFPORT=6060

# ============================================
# External Clients (Optional)
# ============================================
# Database Client
# Enable and configure if your service needs database access
LUMI_CLIENTS_DATABASE_ENABLED=false
LUMI_CLIENTS_DATABASE_URL=

# Redis Client
# Enable and configure if your service needs caching
LUMI_CLIENTS_REDIS_ENABLED=false
LUMI_CLIENTS_REDIS_URL=

# Tracing Client
# Enable and configure if you want distributed tracing
LUMI_CLIENTS_TRACING_ENABLED=false
LUMI_CLIENTS_TRACING_ENDPOINT=

# ============================================
# Observability
# ============================================
LUMI_OBSERVABILITY_LOGLEVEL=info
LUMI_OBSERVABILITY_LOGFORMAT=json
LUMI_OBSERVABILITY_LOGOUTPUT=stdout
LUMI_OBSERVABILITY_LOGSAMPLING=true
LUMI_OBSERVABILITY_LOGDEVELOPMENT=false
LUMI_OBSERVABILITY_METRICSENABLED=true
LUMI_OBSERVABILITY_METRICSPORT=9090
LUMI_OBSERVABILITY_METRICSPATH=/metrics

# ============================================
# Middleware Configuration
# ============================================
# CORS
LUMI_MIDDLEWARE_CORSENABLED=false
LUMI_MIDDLEWARE_CORSALLOWORIGINS=
LUMI_MIDDLEWARE_CORSALLOWMETHODS=GET,POST,PUT,DELETE,OPTIONS
LUMI_MIDDLEWARE_CORSALLOWHEADERS=Origin,Content-Type,Accept,Authorization
LUMI_MIDDLEWARE_CORSEXPOSEHEADERS=X-Request-ID
LUMI_MIDDLEWARE_CORSALLOWCREDENTIALS=false
LUMI_MIDDLEWARE_CORSMAXAGE=12h

# Rate Limiting
LUMI_MIDDLEWARE_RATELIMITENABLED=true
LUMI_MIDDLEWARE_RATELIMITRATE=60
LUMI_MIDDLEWARE_RATELIMITBURST=10
LUMI_MIDDLEWARE_RATELIMITTYPE=ip

# Recovery
LUMI_MIDDLEWARE_RECOVERYSTACKTRACE=true
LUMI_MIDDLEWARE_RECOVERYSTACKSIZE=4096
LUMI_MIDDLEWARE_RECOVERYPRINTSTACK=false

# Request Handling
LUMI_MIDDLEWARE_REQUESTIDHEADER=X-Request-ID
LUMI_MIDDLEWARE_TRUSTEDPROXIES=
LUMI_MIDDLEWARE_TRUSTALLPROXIES=false
LUMI_MIDDLEWARE_LOGSKIPPATHS=/health,/ready,/metrics
LUMI_MIDDLEWARE_LOGREQUESTBODY=false
LUMI_MIDDLEWARE_LOGRESPONSEBODY=false
LUMI_MIDDLEWARE_LOGSLOWTHRESHOLD=1s

# ============================================
# Feature Flags
# ============================================
LUMI_FEATURES_ENABLENEWAPI=false
LUMI_FEATURES_ENABLEBETAFEATURES=false
LUMI_FEATURES_MAINTENANCEMODE=false

# ============================================
# Example: External Service URLs
# ============================================
# When using external services, configure them like:
#
# PostgreSQL (from lumi-postgres template or cloud service):
# LUMI_CLIENTS_DATABASE_ENABLED=true
# LUMI_CLIENTS_DATABASE_URL=postgres://user:password@localhost:5432/dbname?sslmode=disable
#
# Redis (from lumi-redis template or cloud service):
# LUMI_CLIENTS_REDIS_ENABLED=true
# LUMI_CLIENTS_REDIS_URL=redis://localhost:6379/0
#
# OpenTelemetry (from observability stack or cloud service):
# LUMI_CLIENTS_TRACING_ENABLED=true
# LUMI_CLIENTS_TRACING_ENDPOINT=localhost:4317
